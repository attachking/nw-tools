{
  "main": "index.html",
  "name": "nwjs",
  "description": "使用nw.js封装的App",
  "version": "0.0.1",
  "keywords": [
    "nw",
    "客户端"
  ],
  "node-main": "./js/main.js",
  "nodejs": true,
  "single-instance": true,
  "window": {
    "title": "小工具",
    "icon": "icon.png",
    "toolbar": true,
    "frame": false,
    "width": 500,
    "height": 300,
    "position": "center",
    "max_width": 500,
    "max_height": 300,
    "min_width": 500,
    "min_height": 300,
    "always-on-top": false,
    "fullscreen": false,
    "show_in_taskbar": true
  },
  "webkit": {
    "plugin": true,
    "java": false,
    "page-cache": false
  },
  "chromium-args": "-allow-file-access-from-files",
  "dependencies": {
    "iconv-lite": "^0.4.23"
  }
}
